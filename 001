#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct student
{
 int ID;
 char name[100];
 double grade;

};

int main (int argc, char *argv[]){
    struct student s1 = {111,"ab",3.3 };

    s1.ID = 12345;
    s1.name[0] = 'c';
    s1.grade = 0.4;

    printf("ID :%i/n",s1.ID);
    printf("name :%s/n",s1.name);
    printf("grade :%f/n",s1.grade);

    strcpy(s1.name, "BONGJUN");
    printf("name2 : s1.name");
    
    system("PAUSE");
    return 0;
}
